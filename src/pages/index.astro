---
import BaseLayout from "../layouts/BaseLayout.astro";
import ExcellenceSection from "../components/ExcellenceSection.astro";
import CTASection from "../components/CTASection.astro";
import TestimonialSection from "../components/TestimonialSection.astro";
import StatsSection from "../components/StatsSection.astro";
---

<style>
  @font-face {
  font-family: 'Yale';
  src: url('/fonts/OPTIYale-ScriptSuppl.woff') format('woff');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Marlet';
  src: url('/fonts/fonnts.com-PF_Marlet_Display_Italic (1).woff') format('woff');
  font-weight: normal;
  font-style: normal;
}

:root {
  --font-secondary: 'Yale';
  --font-display: 'Marlet';
}

  /* Layout */
  .container-full {
    width: 100%;
    padding: 0px;
    margin: 0;
    background-color: var(--color-white);
  }

  /* Banner Styles */
  .coffee-to-go {
    position: relative;
    background-color: #000000;
    padding: 0 20px 60px;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
  }

  .banner {
    position: relative;
    min-height: 70vh;
    justify-content: center;
    text-align: center;
    padding: 50px;
    display: flex;
    overflow: hidden;
    margin: 42px 80px 0px;
    border-radius: 15px;
    background-color: #000000;
    background-image: url(/images/Hero Header.jpg);
    background-size: cover;
    background-position: center;
    color: var(--color-light-pink);
    flex-direction: column;
    align-items: center;
  }

  .banner::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .banner h1 {
    font-size: 5rem;
    font-weight: lighter;
    font-style: normal;
    line-height: 1.2;
    text-align: center;
    max-width: 1010px;
    margin-left: 10px;
    font-family: var(--font-display);
    color: var(--color-white);
    position: relative;
    z-index: 2;
  }
  .banner h1 span {
    font-family: 'Yale';
    font-size: 10rem;
    font-style: normal;
    font-weight: 500;
    line-height: .8;
    text-align: left;
    color: var(--color-light-pink);
    position: relative;
    z-index: 2;
  }

  .buttons-banner {
    display: flex;
    gap: 15px;
    justify-content: flex-end;
    flex-wrap: wrap;
    position: relative;
    z-index: 2;
  }

  .buttons-banner a {
    display: inline-block;
    padding: 10px 25px;
    text-decoration: none;
    border: solid 2px var(--color-primary);
    font-weight: 600;
    border-radius: 30px;
    transition: all 0.3s ease;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
  }

  .button-agendar {
    background-color: var(--color-primary);
    color: var(--color-white);
    border: none;
    padding: 14px 28px;
    border-radius: 30px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    box-shadow: 0 4px 10px rgba(229, 177, 174, 0.3);
  }

  .button-agendar i {
    margin-left: 8px;
  }

  .button-agendar:hover {
    background-color: #d9a19d;
    transform: translateY(-2px);
  }

  .button-mas-info {
    background-color: transparent;
    color: var(--color-white);
    border: 2px solid var(--color-primary);
    padding: 15px 30px;
    border-radius: 30px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .button-mas-info:hover {
    background-color: var(--color-white);
    color: var(--color-text);
    transform: translateY(-2px);
  }

  /* Services Section */
  .head-services {
    text-align: center;
    display: flex;
    max-width: 1300px;
    margin: 0 auto;
    padding: 80px 80px 0px;
    color: var(--color-dark);
    justify-content: space-between;
  }
  .icon-menu,
  .icon-coffee,
  .icon-catering {
    width: 50px;
    height: 50px;
    fill: var(--color-primary);
  }
  .head-services-title {
    display: flex;
    align-self: start;
    flex-direction: column;
    align-items: flex-start;
  }

  .head-services-title h2 {
    display: inline-block;
    color: var(--color-light-pink);
    font-family: var(--font-primary);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    background-color: var(--color-primary);
    padding: 5px 15px;
    border-radius: 20px;
    margin-bottom: 10px;
    font-weight: 600;
  }

  .head-services-title h1 {
    font-family: var(--font-display);
    font-size: 3.5rem;
    font-style: italic;
    font-weight: 400;
    margin-bottom: 20px;
    color: var(--color-dark);
  }

  .head-services-description p {
    font-size: 1.2rem;
    color: var(--color-text-light);
    max-width: 300px;
    font-weight: 500;
    margin: 0 auto;
    text-align: left;
  }

  .body-services {
    display: flex;
    justify-self: anchor-center;
    max-width: 1300px;
    gap: 20px;
    margin: 0;
    padding: 80px 80px;
    color: var(--color-dark);
  }

  /* Responsividad */
  @media (max-width: 1200px) {
    .head-services {
      padding: 60px 40px 0px;
    }

    .body-services {
      padding: 60px 40px;
    }

    .head-services-title h1 {
      font-size: 3rem;
    }
  }

  @media (max-width: 992px) {
    .head-services {
      flex-direction: column;
      text-align: center;
      padding: 40px 20px 0px;
    }

    .head-services-description {
      margin-top: 20px;
    }
    .head-services-title {
      align-self: center;
      align-items: center;
    }
    .head-services-title h1 {
      font-size: 2.5rem;
    }
    .head-services-description p {
      text-align: center;
    }

    .body-services {
      flex-direction: column;
      padding: 40px 20px;
      gap: 15px;
    }

    .body-service-item {
      max-width: 350px !important;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .banner {
      padding: 60px 20px;
    }

    .banner h1 {
      font-size: 2.5rem;
    }

    .buttons-banner {
      flex-direction: column;
      gap: 15px;
    }

    .button-agendar,
    .button-mas-info {
      width: 100%;
      max-width: 300px;
      margin: 0 auto;
    }

    .head-services {
      padding: 30px 15px 0px;
    }

    .head-services-title h1 {
      font-size: 2rem;
    }

    .head-services-description p {
      font-size: 1.1rem;
    }

    .body-services {
      padding: 30px 15px;
    }
  }

  @media (max-width: 480px) {
    .banner {
      padding: 40px 15px;
    }

    .banner h1 {
      font-size: 2rem;
    }

    .head-services {
      padding: 20px 10px 0px;
    }

    .head-services-title h1 {
      font-size: 1.8rem;
    }

    .head-services-description p {
      font-size: 1rem;
      max-width: 250px;
    }

    .body-services {
      padding: 20px 10px;
    }

    .body-service-item {
      max-width: 300px;
    }
  }

  .body-service-item,
  .body-service-item-b {
    flex: 1;
    min-width: 280px;
    padding: 30px;
    border-radius: 12px;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    text-align: center;
  }

  .body-service-item {
    background-color: var(--color-white);
    border: 1px solid #eee;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }

  .body-service-item-b {
    background-color: var(--color-dark);
    color: var(--color-white);
  }
  .body-service-item-b .body-service-item-title h3 {
    color: var(--color-light-pink);
  }
  .body-service-item-b .body-service-item-description p {
    color: var(--color-light-primary);
  }

  .body-service-item:hover,
  .body-service-item-b:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .body-service-item-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 15px;
    gap: 15px;
  }

  .body-service-item-title i {
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-right: 10px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(229, 177, 174, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .body-service-item-title h3 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    margin-bottom: 15px;
  }

  .body-service-item-description p {
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Excellence Section */
  .container-flex:nth-of-type(3) {
    background-color: var(--color-dark);
    border-radius: 15px;
    color: var(--color-white);
  }

  /* Responsive Styles */
  @media (max-width: 992px) {
    .body-services {
      grid-template-columns: repeat(2, 1fr);
    }

    .body-cta {
      flex-direction: column;
    }
  }

  @media (max-width: 768px) {
    .banner h1 {
      font-size: 2.5rem;
    }

    .head-services-title h1,
    .head-excelence h1,
    .head-cta h1 {
      font-size: 2.2rem;
    }

    .buttons-banner {
      flex-direction: column;
      align-items: center;
    }

    .button-agendar,
    .button-mas-info {
      width: 100%;
      max-width: 280px;
    }
  }

  /* Stats and Promo Section */
  .stats-promo-section {
    margin: 60px auto;
    padding: 0;
  }

  .stats-promo-grid {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-template-rows: repeat(3, 180px);
    gap: 15px;
  }

  .stats-promo-item {
    border-radius: 8px;
    overflow: hidden;
    position: relative;
  }

  .black-card {
    grid-column: 1 / 3;
    grid-row: 1 / 2;
    background-color: var(--color-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
  }

  .companies-card {
    text-align: center;
    padding: 20px;
  }

  .companies-card h3 {
    font-family: var(--font-primary);
    font-size: 1.25rem;
    margin-top: 10px;
    font-weight: 500;
  }

  .pink-dots {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 12px;
  }

  .pink-dots span {
    width: 8px;
    height: 8px;
    background-color: var(--color-light-pink);
    border-radius: 50%;
    margin: 0 2px;
  }

  .pink-dots i {
    color: var(--color-primary);
    margin-left: 3px;
    font-size: 10px;
  }

  .image-card {
    grid-column: 3 / 7;
    grid-row: 1 / 3;
    background-color: #f5f5f5;
  }

  .image-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1),
      rgba(0, 0, 0, 0.6)
    );
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .overlay-logo {
    width: 120px;
    height: auto;
  }

  .food-image {
    grid-column: 7 / 9;
    grid-row: 1 / 2;
  }

  .food-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .promo-text {
    grid-column: 1 / 3;
    grid-row: 2 / 3;
    background-color: var(--color-primary);
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 25px;
  }

  .arrow-box {
    background-color: var(--color-white);
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 12px;
  }

  .arrow-box i {
    color: var(--color-text);
    font-size: 0.9rem;
  }

  .promo-text p {
    font-size: 0.9rem;
    line-height: 1.5;
    color: var(--color-dark);
    font-weight: 500;
  }

  .stats-card {
    grid-column: 7 / 9;
    grid-row: 2 / 3;
    background-color: var(--color-white);
    padding: 20px;
    display: flex;
    align-items: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.04);
    border: 1px solid #f5f5f5;
  }

  .stats-box {
    width: 100%;
  }

  .stat {
    margin-bottom: 15px;
  }

  .stat h2 {
    font-family: var(--font-display);
    font-size: 2rem;
    color: var(--color-text);
    margin-bottom: 0;
    display: flex;
    align-items: baseline;
  }

  .stat h2 span {
    font-size: 1.2rem;
    margin-left: 2px;
    color: var(--color-primary);
  }

  .stat p {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 1px;
    color: var(--color-text-light);
    margin-top: 4px;
  }

  /* Fin de estilos de secciones principales */

  /* Responsive Styles for New Sections */
  @media (max-width: 992px) {
    .stats-promo-grid {
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: auto;
      gap: 12px;
    }

    .black-card {
      grid-column: 1 / 3;
      grid-row: 1 / 2;
    }

    .image-card {
      grid-column: 1 / 5;
      grid-row: 3 / 4;
      height: 250px;
    }

    .food-image {
      grid-column: 3 / 5;
      grid-row: 1 / 2;
    }

    .promo-text {
      grid-column: 1 / 3;
      grid-row: 2 / 3;
    }

    .stats-card {
      grid-column: 3 / 5;
      grid-row: 2 / 3;
    }

    /* Media queries para secciones principales */
  }

  @media (max-width: 768px) {
    .banner {
      padding: 80px 20px;
      margin: 18px 20px;
    }

    .banner h1 {
      font-size: 3rem;
        width: -webkit-fill-available;
    }
    .banner h1 span {
      font-size: 5rem;
      text-align: center;
      padding-right: 16px;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: 15px;
    }

    .testimonial-card-3 {
      grid-column: 1 / 2;
    }

    .stats-promo-grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      gap: 12px;
    }

    .black-card,
    .food-image,
    .promo-text,
    .stats-card,
    .image-card {
      grid-column: 1 / 2;
      min-height: 150px;
    }

    .black-card {
      grid-row: 1 / 2;
    }

    .food-image {
      grid-row: 2 / 3;
    }

    .promo-text {
      grid-row: 3 / 4;
    }

    .stats-card {
      grid-row: 4 / 5;
    }

    .image-card {
      grid-row: 5 / 6;
      height: 200px;
    }

    /* Media queries para dispositivos móviles */
  }
</style>

