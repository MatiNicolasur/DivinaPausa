<script>
  import { setupPageAnimations } from "../utils/animations";
  import { gsap } from "gsap";

  // Setup page animations with cleanup
  const cleanup = setupPageAnimations(() => {
    // Type assertion for GSAP elements
    const toArray = (selector: string): HTMLElement[] => {
      return Array.from(document.querySelectorAll(selector));
    };

    // Banner Animations (on page load)
    toArray(".banner h1").forEach((el) => {
      gsap.from(el, {
        opacity: 0,
        y: 30,
        duration: 1.0,
        ease: "power3.out",
        delay: 0.2,
      });
    });

    toArray(".buttons-banner").forEach((el) => {
      gsap.from(el, {
        opacity: 0,
        y: 30,
        duration: 1.0,
        ease: "power3.out",
        delay: 0.5,
      });
    });

    // Services Section
    toArray(".head-services-title").forEach((el) => {
      gsap.from(el, { x: -50, opacity: 0 });
    });

    toArray(".head-services-description").forEach((el) => {
      gsap.from(el, { x: 50, opacity: 0, delay: 0.15 });
    });

    const serviceItems = toArray(".body-service-item");
    if (serviceItems.length > 0) {
      gsap.from(serviceItems, {
        opacity: 0,
        duration: 1.2,
        stagger: 0.1,
        ease: "power3.out",
        scrollTrigger: {
          trigger: ".body-services",
          start: "top 70%",
          toggleActions: "play none none none",
          once: true,
        },
      });
    }

    // ExcellenceSection
    toArray("section[data-excellence-section]").forEach((el) => {
      gsap.from(el, { y: 50, opacity: 0 });
    });

    // CTASection
    toArray("section[data-cta-section]").forEach((el) => {
      gsap.from(el, { y: 50, opacity: 0 });
    });

    // TestimonialSection
    toArray(".testimonials-section .section-title").forEach((el) => {
      gsap.from(el, { y: 30, opacity: 0 });
    });

    const testimonialCards = toArray(".testimonial-card");
    if (testimonialCards.length > 0) {
      gsap.from(testimonialCards, {
        opacity: 0,
        y: 50,
        duration: 0.5,
        stagger: 0.1,
        ease: "power3.out",
        scrollTrigger: {
          trigger: ".testimonials-grid",
          start: "top 80%",
          toggleActions: "play none none none",
          once: true,
        },
      });
    }

    // StatsSection
    toArray("section[data-stats-section]").forEach((el) => {
      gsap.from(el, { y: 50, opacity: 0 });
    });

    // --- Button Event Listeners ---
    toArray(
      ".button-agendar, .carousel-item-content button, .other-events-carousel-item-content button",
    ).forEach((button) => {
      button.addEventListener("click", () => {
        console.log("Cal.com booking would open here (placeholder)");
        // Example: window.open('https://cal.com/your-username/your-event-type', '_blank');
      });
    });

    const emailButton = document.querySelector(
      ".body-cta-buttons button:nth-child(2)",
    );
    if (emailButton) {
      emailButton.addEventListener("click", () => {
        window.location.href = "mailto:contacto@divinapausa.cl";
      });
    }

    const scrollButton = document.getElementById("scroll-to-cta");
    if (scrollButton) {
      scrollButton.addEventListener("click", () => {
        const ctaSection = document.querySelector("#cta-section");
        if (ctaSection) {
          ctaSection.scrollIntoView({ behavior: "smooth", block: "start" });
        }
      });
    }
  });

  // Cleanup on component unmount
  if (import.meta.hot) {
    import.meta.hot.on("astro:before-swap", () => {
      cleanup?.();
      // Cleanup GSAP ScrollTriggers
      gsap.context(() => {
        ScrollTrigger.getAll().forEach((trigger) => trigger.kill());
      });
    });
  }
</script>
