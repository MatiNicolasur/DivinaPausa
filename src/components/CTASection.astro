<script>
  // Script para manejar la interacción de la sección CTA
  document.addEventListener('DOMContentLoaded', () => {
    // TypeScript type definitions
    interface HTMLElementWithStyle extends HTMLElement {
      style: CSSStyleDeclaration;
    }

    // Referencias a los elementos del DOM
    const scheduleBtn = document.getElementById('scheduleMeeting') as HTMLButtonElement | null;
    const emailBtn = document.getElementById('sendEmail') as HTMLButtonElement | null;
    const ctaSection = document.getElementById('ctaSection');
    const animatedElements = ctaSection ? Array.from(ctaSection.querySelectorAll<HTMLElement>('[data-animate]')) : [];
    
    // Configuración de animaciones al hacer scroll
    const setupAnimations = () => {
      if (typeof window === 'undefined' || !window.IntersectionObserver) return;
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const element = entry.target as HTMLElementWithStyle;
            const animationType = element.getAttribute('data-animate');
            const delay = parseFloat(element.getAttribute('data-delay') || '0');
            
            // Aplicar la animación con el retraso correspondiente
            setTimeout(() => {
              if (element) {
                element.style.opacity = '1';
                element.style.transform = 'translateY(0)';
                element.style.transition = 'opacity 0.6s ease-out, transform 0.6s ease-out';
              }
            }, delay * 1000);
            
            // Dejar de observar el elemento una vez que se ha animado
            observer.unobserve(element);
          }
        });
      }, {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      });
      
      // Observar cada elemento animado
      animatedElements.forEach((element) => {
        // Configurar estado inicial
        const animationType = element.getAttribute('data-animate');
        let transform = '';
        
        switch(animationType) {
          case 'fade-up':
            transform = 'translateY(30px)';
            break;
          case 'fade-down':
            transform = 'translateY(-30px)';
            break;
          case 'fade-left':
            transform = 'translateX(30px)';
            break;
          case 'fade-right':
            transform = 'translateX(-30px)';
            break;
          default:
            transform = 'translateY(0)';
        }
        
        element.style.opacity = '0';
        element.style.transform = transform;
        element.style.willChange = 'opacity, transform';
        
        // Comenzar a observar el elemento
        observer.observe(element);
      });
    };
    
    // Inicializar animaciones
    if (animatedElements.length > 0) {
      // Usar requestAnimationFrame para asegurar que el DOM esté listo
      requestAnimationFrame(() => {
        setupAnimations();
      });
      
      // Volver a ejecutar en caso de que se recargue el contenido dinámico
      document.addEventListener('astro:after-swap', setupAnimations);
    }
    
    // Manejar clic en el botón de agendar reunión
    if (scheduleBtn) {
      scheduleBtn.addEventListener('click', (e: MouseEvent) => {
        e.preventDefault();
        
        // Cal.com will handle the click automatically via data attributes
        console.log('Cal.com booking initialized...');
      });
    }
    
    // Manejar clic en el botón de enviar correo
    if (emailBtn) {
      emailBtn.addEventListener('click', (e: MouseEvent) => {
        e.preventDefault();
        
        // Agregar clase de retroalimentación visual
        emailBtn.classList.add('clicked');
        setTimeout(() => {
          emailBtn.classList.remove('clicked');
        }, 300);
        
        // Abrir cliente de correo
        window.location.href = 'mailto:contacto@divinapausa.cl?subject=Consulta%20sobre%20servicios&body=Hola%20Divina%20Pausa%2C%0D%0A%0D%0AMe%20gustar%C3%ADa%20recibir%20m%C3%A1s%20informaci%C3%B3n%20sobre...';
      });
    }
  });
</script>
