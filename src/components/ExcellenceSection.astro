<script>
  // Helper function para cambiar entre secciones
  function fadeSwitch(showEl: HTMLElement | null, hideEls: HTMLElement[]) {
    // Primero aseguramos que todos los elementos a ocultar tengan opacity: 0
    hideEls.forEach((el) => {
      if (el) {
        el.style.opacity = "0";
        el.style.transition = "opacity 0.6s ease";
        setTimeout(() => {
          el.classList.remove("active");
        }, 600);
      }
    });

    // Aseguramos que el elemento a mostrar tenga opacity: 0 inicialmente
    if (showEl) {
      showEl.style.opacity = "0";
      showEl.style.transition = "opacity 0.6s ease";
      showEl.classList.add("active");
      // Pequeña pausa antes de mostrar para asegurar que la transición funcione
      setTimeout(() => {
        showEl.style.opacity = "1";
      }, 50);
    }
  }

  // Inicializar cuando el DOM esté listo
  document.addEventListener("DOMContentLoaded", function () {
    const tabButtons = document.querySelectorAll<HTMLElement>(
      ".excelence-carousel-options button",
    );
    const coffeeToGo = document.querySelector<HTMLElement>(".coffee-to-go");
    const carousel = document.querySelector<HTMLElement>(".carousel");
    const otherEvents = document.querySelector<HTMLElement>(".other-events");

    if (tabButtons.length > 1 && carousel) {
      if (tabButtons[1]) tabButtons[1].classList.add("active");
      if (carousel) {
        carousel.classList.add("active");
        carousel.style.opacity = "1";
      }

      tabButtons.forEach((button, index) => {
        button.addEventListener("click", () => {
          tabButtons.forEach((btn) => btn.classList.remove("active"));
          button.classList.add("active");

          let newlyVisibleContainer: HTMLElement | null = null;

          if (index === 0 && coffeeToGo && carousel && otherEvents) {
            fadeSwitch(coffeeToGo, [carousel, otherEvents]);
            newlyVisibleContainer = coffeeToGo;
          } else if (index === 1 && carousel && coffeeToGo && otherEvents) {
            fadeSwitch(carousel, [coffeeToGo, otherEvents]);
            newlyVisibleContainer = carousel;
          } else if (index === 2 && otherEvents && coffeeToGo && carousel) {
            fadeSwitch(otherEvents, [coffeeToGo, carousel]);
            newlyVisibleContainer = otherEvents;
          }
        });
      });
    }

    // Manejar botones de reserva
    const bookingButtons = document.querySelectorAll<HTMLElement>(
      ".carousel-item-content button, .other-events-carousel-item-content button",
    );
    bookingButtons.forEach((button) => {
      button.addEventListener("click", () => {
        console.log("Cal.com booking would open here");
      });
    });
  });
</script>
