  }

  @media (max-width: 480px) {
    .excelence-carousel-options {
      position: sticky;
      top: 0;
      background: var(--color-dark);
      z-index: 10;
      padding: 10px 0 10px;
    }

    .coffee-to-go {
      width: 100%;
      max-width: 400px;
      margin: 0 auto;
    }

    .coffee-to-go-content {
      flex-direction: column;
      text-align: center;
      gap: 20px;
    }

    .carousel,
    .other-events-carousel {
      gap: 10px;
      padding: 10px;
    }

    .carousel-item-1,
    .carousel-item-2,
    .carousel-item-3,
    .other-events-carousel-item-1,
    .other-events-carousel-item-2,
    .other-events-carousel-item-3 {
      min-width: 100%;
      flex: 0 0 100%;
      height: 200px;
    }
  }
</style>

<script is:inline>
  let activeTab = 1; // 0: Coffee To Go, 1: Corporate, 2: Otros eventos
  function setTab(idx) {
    if (idx > 1) {
      // Redirigir a servicios si se selecciona "Otros eventos"
      window.location.href = "/servicios";
      return;
    }
    activeTab = idx;
    updateView();
  }
  function redirectToServices() {
    window.location.href = "/servicios";
  }
  function updateView() {
    document
      .querySelectorAll(".excelence-carousel-options button")
      .forEach((btn, idx) => {
        btn.classList.toggle("active", idx === activeTab);
      });
    document.querySelector(".coffee-to-go").style.display =
      activeTab === 0 ? "flex" : "none";
    document.querySelector(".carousel").style.display =
      activeTab === 1 ? "flex" : "none";
    document.querySelector(".other-events").style.display = "none"; // Siempre ocultar "Otros eventos"
  }
  setTimeout(() => {
    document
      .querySelectorAll(".excelence-carousel-options button")
      .forEach((btn, idx) => {
        btn.onclick = () => setTab(idx);
      });
    document
      .querySelectorAll(".carousel-item-content button")
      .forEach((btn, idx) => {
        btn.onclick = redirectToServices;
      });
    document
      .querySelectorAll(".other-events-carousel-item-content button")
      .forEach((btn, idx) => {
        btn.onclick = redirectToServices;
      });
    updateView();
  }, 1);
</script>
