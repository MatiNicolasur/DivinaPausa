<style>
  /* Font imports */
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap');
  
  /* Variables */
  :root {
    --color-primary: #e5b1ae;
    --color-secondary: #212121;
    --color-white: #ffffff;
    --color-light-pink: #ffe5e3;
    --color-dark: #212121;
    --color-text: #212121;
    --color-text-light: #666666;
    --font-primary: 'Montserrat', sans-serif;
    --font-secondary: 'PF Marlet', serif;
    --font-display: 'OPTI Yale', serif;
  }

  /* Footer Styles */
  .footer-section {
    margin: 0;
    padding: 40px 5%;
    background-color: var(--color-dark);
    color: var(--color-white);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 2fr;
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-logo img {
    max-width: 120px;
    margin-bottom: 15px;
    filter: brightness(0) invert(1);
  }

  .footer-logo p {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 20px;
    font-size: 0.85rem;
  }

  .social-links {
    display: flex;
    gap: 12px;
  }

  .social-links a {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    color: var(--color-white);
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background-color: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-3px);
  }

  .footer-menu h4, .footer-resources h4 {
    font-family: var(--font-primary);
    font-size: 1rem;
    margin-bottom: 20px;
    color: var(--color-white);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-menu ul, .footer-resources ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-menu li, .footer-resources li {
    margin-bottom: 10px;
  }

  .footer-menu a, .footer-resources a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.85rem;
  }

  .footer-menu a:hover, .footer-resources a:hover {
    color: var(--color-primary);
  }

  .footer-faq {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .faq-item {
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 6px;
    overflow: hidden;
    transition: background-color 0.3s ease;
  }

  .faq-item:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .faq-item a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 15px;
    text-decoration: none;
  }

  .faq-item h5 {
    font-family: var(--font-primary);
    font-size: 0.9rem;
    color: var(--color-white);
    font-weight: 500;
    margin: 0;
  }

  .faq-item i {
    color: var(--color-primary);
    transition: transform 0.3s ease;
    font-size: 0.8rem;
  }

  .faq-item:hover i {
    transform: translateX(5px);
  }
  
  .footer-bottom {
    text-align: center;
    padding-top: 30px;
    margin-top: 30px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .footer-bottom p {
    margin: 5px 0;
  }

  .footer-bottom a {
    color: var(--color-primary);
    font-weight: 500;
    text-decoration: none;
  }

  .footer-bottom a:hover {
    text-decoration: underline;
  }

  @media (max-width: 992px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 30px;
    }

    .footer-logo {
      grid-column: 1 / 3;
    }
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 25px;
      .footer-logo p{
        display: none;
      }
    }

    .footer-logo,
    .footer-menu,
    .footer-resources,
    .footer-faq {
      grid-column: 1 / 2;
    }
    
    .footer-menu, 
    .footer-resources {
      display: flex;
      flex-direction: column;
      display: none;
    }
    
    .footer-menu h4, 
    .footer-resources h4 {
      margin-bottom: 15px;
    }
  }
</style>
